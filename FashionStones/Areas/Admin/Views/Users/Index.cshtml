@model IEnumerable<FashionStones.Models.ApplicationUser>

@{
    ViewBag.Title = "Пользователи";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Пользователи</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>       
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id = item.Id }, new { @class = "detailLink" })
            @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "deleteLink" })
        </td>
    </tr>
   
}

</table>
