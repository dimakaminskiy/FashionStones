                    <td class="editor-label">
                        @Html.LabelFor(model => model.order.Username)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.order.Username)
                        @Html.ValidationMessageFor(model => model.order.Username)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        Статус
                    </td>
                    <td class="editor-field">
                        @Html.DropDownListFor(model=>model.order.OrderStatusId,(SelectList)ViewBag.OrderStatusId,Model.order.OrderStatusId)
                    </td>
                </tr>
             

            </table>

        </div> 
    
    <div class="content_in">
    
        <table>
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Категория
                </th>
       
                <th>
                    Упаковка (г)
                </th>
                <th>
                    Количество
                </th>
                <th>
                
                    Цена (грн)
                </th>
            </tr>

            @foreach (var item in Model.orderDetails) {
                <tr id ="row-@item.ProduceInPackageId">
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
        
                    <td>
                        @Html.DisplayFor(modelItem => item.Package)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)        
                    </td>
                    <td>
                        @String.Format("{0:0.00}", ( item.Count*item.Price))
                    </td>
    
        
                </tr>
            }
        </table>
        <p>
            @Html.ActionLink("Редактировать список  покупок","EditListOrder", new { id=Model.order.Id})
            </p>
    
        <p>
            <input type="submit" value="Сохранить" />
        </p>

        </div>
 
}

<div>
    @Html.ActionLink("К списку новых заказов", "BrowseNewOrders")<br/>
    @Html.ActionLink("К списку заказов в обработке", "BrowseOrdersInProcessing")<br/>
    @Html.ActionLink("К журналу заказов", "BrowseExecutedOrders")
</div>
