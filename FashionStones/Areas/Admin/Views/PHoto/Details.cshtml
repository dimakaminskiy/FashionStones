@model FashionStones.Models.Domain.Entities.JewelPHoto

@{
    ViewBag.Title = "Фото";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Детали</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">

        <dt>
            <h4>@Html.DisplayNameFor(model => model.Caption)</h4>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Caption)
        </dd>

    </dl>
</div>

<div>
    <div>
        <p>Большое изображение</p>
        <img src="@Model.PathToBig" alt="@Model.Caption">
    </div>

    <div>
        <p>Малое изображение</p>
        <img src="@Model.PathToSmall" alt="@Model.Caption">
    </div>
</div>
<p>
    <div>
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }, new { @class = "btn btn-default" })
        @Html.ActionLink("Удалить", "Delete", new { id = Model.Id }, new {@class="btn btn-default"})
    </div>


    @Html.ActionLink("К фото", "Index")
</p>
