@model IEnumerable<FashionStones.Models.Domain.Entities.Material>

@{
    ViewBag.Title = "Материалы";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}


<p>
    @Html.ActionLink("Создать", "Create") 
</p>

<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id }, new { @class = "editLink" })
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "deleteLink" })
            </td>
        </tr>
    }

</table>


