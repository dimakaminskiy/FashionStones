@model IEnumerable<FashionStones.Models.Domain.Entities.Discount>

@{
    ViewBag.Title = "Скидки";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<p>
    @Html.ActionLink("Создать", "Create")
</p>

@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Value)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.ActionLink("Редактировать", "Edit", new {id = item.Id}, new {@class = "editLink"})
                    @Html.ActionLink("Удалить", "Delete", new {id = item.Id}, new {@class = "deleteLink"})
                </td>
            </tr>
        }

    </table>
}
else
{
    <p>Нет скидок</p>
}