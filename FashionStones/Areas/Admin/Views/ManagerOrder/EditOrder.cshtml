               <td class="editor-field">
                   @Html.EditorFor(model => model.order.Country)
                   @Html.ValidationMessageFor(model => model.order.Country)
               </td>
           </tr>
           

 
           <tr>
               <td class="editor-label">
                   @Html.LabelFor(model => model.order.State)
               </td>
               <td class="editor-field">
                   @Html.EditorFor(model => model.order.State)
                   @Html.ValidationMessageFor(model => model.order.State)
               </td>
           </tr>
                     <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.order.City)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.order.City)
                        @Html.ValidationMessageFor(model => model.order.City)
                    </td>
                </tr>

           <tr>
               <td class="editor-label">
                   @Html.LabelFor(model => model.order.Address)
               </td>
               <td class="editor-field">
                   @Html.EditorFor(model => model.order.Address)
                   @Html.ValidationMessageFor(model => model.order.Address)
               </td>
           </tr>
           
           <tr>
               <td class="editor-label">
                   @Html.LabelFor(model => model.order.PostalCode)
               </td>
               <td class="editor-field">
                   @Html.EditorFor(model => model.order.PostalCode)
                   @Html.ValidationMessageFor(model => model.order.PostalCode)
               </td>
           </tr>
           <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.order.Phone)
                    </td>
                    <td class="editor-field">
                        @Html.EditorFor(model => model.order.Phone)
                        @Html.ValidationMessageFor(model => model.order.Phone)
                    </td>
                </tr>
                <tr>
                    <td class="editor-label">
                        @Html.LabelFor(model => model.order.Email)
